<core:FragmentDefinition
   xmlns="sap.m" xmlns:t="sap.ui.table"
	xmlns:f="sap.ui.layout.form"
		xmlns:l="sap.ui.layout"
	
   xmlns:core="sap.ui.core">
<Dialog id="CreateDialog" class="sapUiSizeCozy" resizable="true" draggable="true" title="{i18n>TitCreate}" contentHeight="600px"
		contentWidth="400px">
		<!-- <ScrollContainer height="60%" width="40%"
			horizontal="true" vertical="false"> -->
			<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="IdCreateForm"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Diplayed Order {oCreateModel>/d/POId}"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Purchase OrderId" />
				<Input id="name" value="{oCreateModel>/d/POId}" />
				<Label text="Street/No." />
				<Input value="{Street}">
				</Input>
				<Input value="{HouseNumber}">
					<layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
				</Input>
				<Label text="ZIP Code/City" />
				<Input value="{ZIPCode}">
					<layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
				</Input>
				<Input value="{City}" />
				<Label text="Country" />
				<Select id="country" selectedKey="{Country}">
					<items>
						<core:Item text="England" key="England"/>
						<core:Item text="Germany" key="Germany"/>
						<core:Item text="USA" key="USA"/>
					</items>
				</Select>
			</f:content>
		</f:SimpleForm>
	</VBox>
		<!-- </ScrollContainer> -->
		<beginButton>
			<Button type="Accept" text="Create" press="onPOCreate" /> 
			<!-- <Button text="OK" press="onSelectTransferUpdate" /> -->

		</beginButton>
		<endButton>
			<Button text="Close" press="onCloseCreateDialog" />
		</endButton>


	</Dialog>






</core:FragmentDefinition>